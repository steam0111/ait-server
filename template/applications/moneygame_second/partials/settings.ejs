<div class="modal__form block">
    <p>Settings</p>

    <label for="progressBar" class="labelCheckBox">Progress bar
        <input type="checkbox" name="progressBar" id="progressBarChanger">
    </label>

    <label for="textChanger" class="labelCheckBox">Show text
        <input type="checkbox" name="showTextChanger" id="showTextChanger">
    </label>

    <label for="textChanger">Choose text
        <input type="text" name="textChanger" id="textChanger">
    </label>

    <label>Next/Back buttons
        <input type="range" min="1" max="<%=countFiles.nextBack%>" name="next-back-btn" id="nextBackBtnsChanger">
    </label>

    <label>Background color <br />
      <input type="color" name="colorChanger" id="colorChanger">
    </label>

    <label>Correct/Incorrect choice
        <input type="range" min="1" max="<%=countFiles.correctChoice%>" name="correctIncorrect" id="correctIncorrectChanger">
    </label>

    <label>Again button
        <input type="range" min="1" max="<%=countFiles.againBtn%>" name="again-btn" id="againBtnChanger">
    </label>

    <label>Basket
        <input type="range" min="1" max="<%=countFiles.basket%>" name="basket" id="basketChanger">
    </label>

    <label>Wallet
        <input type="range" min="1" max="<%=countFiles.wallet%>" name="wallet" id="walletChanger">
    </label>

    <label for="fсurrency">Currency</label>
    <select id="fсurrency" name="сurrency">
      <option value="euro">Euro</option>
      <option value="russian_ruble">Russian ruble</option>
      <option value="us_dollar">U.S. dollar</option>
    </select>
    <br>

    <button type="submit" id="submitBtn">
      Save settings
    </button>
</div>
